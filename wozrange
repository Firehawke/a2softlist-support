#!/bin/bash
# Just in case we have an incomplete run, we're going to clear things out.
rm xml/woz/woz*.xml 2> /dev/null
COUNTER=1
# Run to a maximum of 99, end with exit code 1 when we finally hit a dupe.
while [ $COUNTER -lt 100 ]; do
		if ! (./newwozgen $COUNTER); then
			./wozgenxml
			exit 1
		fi
		let COUNTER=COUNTER+1
done
./wozgenxml
